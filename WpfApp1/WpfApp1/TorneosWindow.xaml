        <Button x:Name="btn_modificar_liga" Content="Mod." Grid.Column="1" HorizontalAlignment="Left" Margin="125,503,0,0" VerticalAlignment="Top" Width="50" RenderTransformOrigin="-0.2,-1.1"/>
        <Button x:Name="btn_ver_liga" Content="Ver" Grid.Column="1" HorizontalAlignment="Left" Margin="6,503,0,0" VerticalAlignment="Top" Width="114" RenderTransformOrigin="1.163,-1" Click="btn_ver_liga_Click"/>
        <Button x:Name="btn_eliminar_liga_con_eliminatorias" Content="Elim." Grid.Column="1" HorizontalAlignment="Left" Margin="428,503,0,0" VerticalAlignment="Top" Width="49"/>
