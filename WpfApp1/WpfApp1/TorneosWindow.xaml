        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="TorneosWindow" Height="600.975" Width="800.393" WindowStyle="None" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
