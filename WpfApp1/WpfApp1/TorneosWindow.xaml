        <ListBox HorizontalAlignment="Left" Height="114" Margin="502,384,0,0" VerticalAlignment="Top" Width="225" Grid.Column="1">
            <ListBoxItem Content="LigaEjemplo1"/>
            <ListBoxItem Content="LigaEjemplo2"/>
            <ListBoxItem Content="LigaEjemplo3"/>
            <ListBoxItem Content="LigaEjemplo4"/>
            <ListBoxItem Content="LigaEjemplo5"/>
            <ListBoxItem Content="LigaEjemplo6"/>
        </ListBox>
        <Label x:Name="lbl_ligas_activas" Content="Ligas Activas" HorizontalAlignment="Left" Margin="10,353,0,0" VerticalAlignment="Top" Foreground="Black" Height="26" Cursor="Hand" Width="221" HorizontalContentAlignment="Center" RenderTransformOrigin="0.47,1.385" Grid.Column="1" FontWeight="Bold" FontSize="14"/>
        <Label x:Name="lbl_ligas_con_eliminatorias_activas" Content="Ligas con Eliminatorias Activas" HorizontalAlignment="Left" Margin="253,353,0,0" VerticalAlignment="Top" Foreground="Black" Height="26" Cursor="Hand" Width="225" HorizontalContentAlignment="Center" RenderTransformOrigin="0.47,1.385" Grid.Column="1" FontWeight="Bold" FontSize="14"/>
