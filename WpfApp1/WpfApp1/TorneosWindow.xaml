                <ImageBrush/>
            </Button.Background>
        </Button>
        <Label x:Name="lbl_mensaje" Content="Presiona uno de los trofeos para crear un nuevo campeonato!&#xA;" HorizontalAlignment="Left" Margin="7,97,0,0" VerticalAlignment="Top" Foreground="#FFFDEFEF" Height="26" Cursor="Hand" Width="726" HorizontalContentAlignment="Center" RenderTransformOrigin="0.47,1.385" Grid.Column="1" FontWeight="Bold"/>

    </Grid>
</Window>
