    <Grid x:Name="grid_campeonatos">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="125*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn_liga" Content="" Grid.Column="1" HorizontalAlignment="Left" Margin="73,138,0,0" VerticalAlignment="Top" Width="158" Height="160" BorderThickness="0" Click="btn_liga_Click">
            <Button.Background>
                <ImageBrush ImageSource="polideportivo_images/campeonatos/trofeo2.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_liga_con_eliminatorias" Content="" Grid.Column="1" HorizontalAlignment="Left" Margin="287,138,0,0" VerticalAlignment="Top" Width="158" Height="160" BorderThickness="0" Click="btn_liga_con_eliminatorias_Click">
            <Button.Background>
                <ImageBrush ImageSource="polideportivo_images/campeonatos/ligaeliminatorias.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_eliminatorias" Content="" Grid.Column="1" HorizontalAlignment="Left" Margin="502,138,0,0" VerticalAlignment="Top" Width="158" Height="160" BorderThickness="0" Click="btn_eliminatorias_Click">
            <Button.Background>
                <ImageBrush ImageSource="polideportivo_images/campeonatos/trofeo4.png"/>
