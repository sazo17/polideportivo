        <Label x:Name="lbl_ayuda" Content="Liga&#xA;" HorizontalAlignment="Left" Margin="74,192,0,0" VerticalAlignment="Top" Foreground="#FF0C0101" Height="36" Cursor="Hand" Width="158" HorizontalContentAlignment="Center" RenderTransformOrigin="0.47,1.385" Grid.Column="1" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="lbl_eliminatorias" Content="Eliminatorias&#xA;" HorizontalAlignment="Left" Margin="502,192,0,0" VerticalAlignment="Top" Foreground="#FF0C0101" Height="36" Cursor="Hand" Width="158" HorizontalContentAlignment="Center" RenderTransformOrigin="0.47,1.385" Grid.Column="1" FontWeight="Bold" FontSize="16"/>
