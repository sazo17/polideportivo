<Window x:Class="WpfApp1.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Gestor de Campeonatos" Height="600.624" Width="800.367" ResizeMode="CanMinimize" WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="menu_background.png"/>
    </Window.Background>
    <Grid Margin="10,0,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="642*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Ellipse x:Name="ellipse_cerrar" Fill="#FFE62310" HorizontalAlignment="Left" Height="14" Margin="10,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="14" RenderTransformOrigin="1.01,1.058" Cursor="Hand"/>
        <Ellipse x:Name="ellipse_minimizar" Fill="#FFB89315" HorizontalAlignment="Left" Height="14" Margin="29,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="14" RenderTransformOrigin="1.01,1.058" Cursor="Hand"/>
        <Ellipse x:Name="ellipse_maximizar" Fill="#FF3FB911" HorizontalAlignment="Left" Height="14" Margin="48,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="14" RenderTransformOrigin="1.01,1.058" Cursor="Hand"/>
        <Button x:Name="btn_torneos" Content="Torneos" HorizontalAlignment="Left" Margin="76,198,0,0" VerticalAlignment="Top" Width="318" Height="71" Foreground="#FFFDF6F6" FontWeight="Bold" FontSize="16" Cursor="Hand" Click="btn_torneos_Click">
            <Button.Background>
                <SolidColorBrush Color="#FFB00D15" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_calendarios" Content="Calendarios" HorizontalAlignment="Left" Margin="76,272,0,0" VerticalAlignment="Top" Width="318" Height="71" Foreground="#FFFDF6F6" FontWeight="Bold" FontSize="16" Cursor="Hand" Click="btn_calendarios_Click">
            <Button.Background>
                <SolidColorBrush Color="#FFCFCF2C" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_equipos" Content="Equipos" HorizontalAlignment="Left" Margin="397,198,0,0" VerticalAlignment="Top" Width="318" Height="71" Foreground="#FFFDF6F6" FontWeight="Bold" FontSize="16" Cursor="Hand" Click="btn_equipos_Click">
            <Button.Background>
                <SolidColorBrush Color="#FF5DA6F0" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_ajustes" Content="Ajustes" HorizontalAlignment="Left" Margin="397,272,0,0" VerticalAlignment="Top" Width="318" Height="71" Foreground="#FFFDF6F6" FontWeight="Bold" FontSize="16" Cursor="Hand" Click="btn_ajustes_Click">
            <Button.Background>
                <SolidColorBrush Color="#FF5D5D5D" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_estadisticas" Content="Estadísticas" HorizontalAlignment="Left" Margin="240,347,0,0" VerticalAlignment="Top" Width="154" Height="78" Cursor="Hand" FontSize="16" Click="btn_estadisticas_Click">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_deportes" Content="Deportes" HorizontalAlignment="Left" Margin="76,347,0,0" VerticalAlignment="Top" Width="161" Height="78" Cursor="Hand" FontSize="16" Click="btn_deportes_Click">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_informacion" Content="Información" HorizontalAlignment="Left" Margin="397,347,0,0" VerticalAlignment="Top" Width="158" Height="78" Cursor="Hand" FontSize="16" Click="btn_informacion_Click">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_ayuda_Copy1" Content="Ayuda" HorizontalAlignment="Left" Margin="559,347,0,0" VerticalAlignment="Top" Width="156" Height="78" Cursor="Hand" FontSize="16" Click="btn_ayuda_Copy1_Click">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Label x:Name="lbl_polideportivo" Content="Polideportivo" HorizontalAlignment="Left" Margin="158,148,0,0" VerticalAlignment="Top" Height="39" Width="143" FontWeight="Bold" FontSize="20" HorizontalContentAlignment="Center" Foreground="#FFFDF1F1"/>
        <Label Content="Logo" HorizontalAlignment="Left" Margin="76,131,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.145,0.783" Height="62" Width="103" Foreground="#FFF1E4E4" FontSize="36"/>
        <Button Content="Log out" HorizontalAlignment="Left" Margin="713,5,0,0" VerticalAlignment="Top" Width="67" RenderTransformOrigin="0.213,-0.628" Height="27" Background="{x:Null}" Foreground="#FFF7F4F4" BorderBrush="{x:Null}" Cursor="Hand" Click="Button_Click"/>
    </Grid>
</Window>
